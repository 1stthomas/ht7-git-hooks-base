{
    "name": "ht7/ht7-git-hooks-base",
    "type": "ht7-git-hooks",
    "description": "Bash scripts to be used in git hooks.",
    "keywords": ["bash", "ht7", "lint", "test"],
    "homepage": "https://github.com/1stthomas/ht7-git-hooks-base",
    "license": "MIT",
    "authors": [
        {
            "name": "1stthomas",
            "role": "Developer"
        }
    ],
    "bin": [
        "bin/ht7-git-hooks"
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-package-install": [
            "pwd",
            "echo 'bin im base post install'"
        ],
        "post-package-update":  [
            "pwd",
            "echo 'bin im base post update'"
        ],
        "post-install-cmd": [
            "pwd",
            "echo '--> bin im base post install'"
        ],
        "pre-install-cmd": [
            "pwd",
            "echo '--> bin im base pre install'"
        ],
        "post-update-cmd": [
            "pwd",
            "echo '--> bin im base post update'"
        ],
        "pre-update-cmd": [
            "pwd",
            "echo '--> bin im base pre update'"
        ]
    },
    "support": {
        "source": "https://github.com/1stthomas/ht7-git-hooks-base"
    }
}
