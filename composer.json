{
    "name": "ht7/ht7-git-hooks-base",
    "type": "ht7-git-hooks",
    "description": "Bash scripts to be used in git hooks.",
    "keywords": ["bash", "ht7", "lint", "test"],
    "homepage": "https://github.com/1stthomas/ht7-git-hooks-base",
    "license": "MIT",
    "authors": [
        {
            "name": "1stthomas",
            "role": "Developer"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-package-install": [
            "pwd",
            "echo 'bin im install'",
            "ls -la"
        ],
        "post-package-update":  [
            "pwd",
            "echo 'bin im update'",
            "ls -la"
        ],
        "post-update-cmd": [
            "pwd",
            "echo '--> bin im post update'",
            "ls -la"
        ],
        "pre-update-cmd": [
            "pwd",
            "echo '--> bin im pre update'",
            "ls -la"
        ]
    },
    "support": {
        "source": "https://github.com/1stthomas/ht7-git-hooks-base"
    }
}
